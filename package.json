    "astro": "^3.5.3",
    "fuse.js": "^7.0.0",
    "github-slugger": "^2.0.0",
    "jsdom": "^22.1.0",
    "mdast-util-toc": "^7.0.0",
    "photoswipe": "^5.4.2",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "remark-toc": "^9.0.0",
    "sanitize-html": "^2.11.0",
    "satori": "^0.10.9",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@astrojs/react": "^3.0.4",

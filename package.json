{
  "name": "blog",
  "version": "1.5.0",
  "type": "module",
  "description": "blog",
  "author": "s-hirano-ist",
  "packageManager": "pnpm@8.15.7",
  "scripts": {
    "check": "astro check",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "tsc": "tsc --noEmit",
    "fmt": "prettier --cache --check **/*.astro .",
    "fmt:fix": "prettier --cache --write **/*.astro .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:mark": "markdownlint-cli2 src/content/summary/*",
    "lint:mark:fix": "markdownlint-cli2-fix src/content/summary/*",
    "lint:css": "stylelint .",
    "lint:css:fix": "stylelint . --fix",
    "lint:secret": "secretlint --maskSecrets **/*",
    "snapshots": "playwright test",
    "snapshots:update": "playwright test --update-snapshots",
    "generate:photo": "python script/generate_photo_path.py",
    "generate:book": "node --loader ts-node/esm script/generateBookData.ts",
    "commit": "git cz",
    "generate:gh-stars": "python gh-export-stars/src/main.py --user s-hirano-ist --output ./src/content/portfolio/gh-stars.json",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": [
      "pnpm check",
      "pnpm fmt",
      "pnpm lint:secret"
    ],
    "src/**/*.{js, jsx, ts, tsx, astro}": [
      "pnpm tsc",
      "pnpm lint"
    ],
    "_markdown/**/*.md": "pnpm lint:mark",
    "src/**/*.{css, astro}": "pnpm lint:css",
    "src/**/*": "python3 script/generate_photo_path.py"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.10",
    "@astrojs/react": "^3.3.1",
    "@astrojs/sitemap": "^3.1.4",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/vercel": "^7.5.4",
    "@fontsource-variable/noto-sans-jp": "^5.0.19",
    "@googleapis/books": "^3.0.0",
    "@studio-freight/lenis": "^1.0.42",
    "astro": "^4.7.0",
    "fuse.js": "^7.0.0",
    "github-slugger": "^2.0.0",
    "jsdom": "^24.0.0",
    "mdast-util-toc": "^7.0.0",
    "photoswipe": "^5.4.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-mermaidjs": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-toc": "^9.0.0",
    "sanitize-html": "^2.13.0",
    "satori": "^0.10.13",
    "sharp": "^0.33.3",
    "tailwindcss": "^3.4.3",
    "taos": "^1.0.5",
    "theme-change": "^2.5.0",
    "typescript": "^5.4.5",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@secretlint/secretlint-rule-preset-recommend": "^8.2.3",
    "@tailwindcss/typography": "^0.5.13",
    "@types/github-slugger": "^2.0.0",
    "@types/jsdom": "^21.1.6",
    "@types/mdast": "^4.0.3",
    "@types/react": "^18.3.1",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "astro-eslint-parser": "^1.0.1",
    "daisyui": "^4.10.2",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^1.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-redos": "^4.4.5",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "git-cz": "^4.9.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdownlint-cli2": "^0.13.0",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "secretlint": "^8.2.3",
    "stylelint": "^16.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "vnu-jar": "^23.4.11"
  }
}

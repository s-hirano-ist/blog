{
  "name": "blog",
  "version": "1.0.0",
  "type": "module",
  "description": "blog",
  "author": "s-hirano-ist",
  "packageManager": "pnpm@8.13.1",
  "scripts": {
    "dev": "astro check --watch & astro dev",
    "build": "astro check & astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "fmt": "prettier --check **/*.astro .",
    "fmt:fix": "prettier --write **/*.astro .",
    "lint": "astro check && tsc --noEmit && eslint .",
    "lint:fix": "astro check & tsc --noEmit & eslint . --fix",
    "lint:mark": "markdownlint-cli2 src/content/summary/*",
    "lint:mark:fix": "markdownlint-cli2-fix src/content/summary/*",
    "lint:css": "stylelint .",
    "lint:css:fix": "stylelint . --fix",
    "snapshots": "playwright test",
    "snapshots:update": "playwright test --update-snapshots",
    "generate:photo": "python script/generate_photo_path.py",
    "generate:book": "node --loader ts-node/esm script/generateBookData.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": "pnpm fmt",
    "src/**/*.{js, jsx, ts, tsx, astro}": "pnpm lint",
    "src/**/*.{css, astro}": "pnpm lint:css",
    "_markdown/**/*.md": "pnpm lint:mark",
    "src/**/*": "python3 script/generate_photo_path.py"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.4",
    "@astrojs/react": "^3.0.9",
    "@astrojs/sitemap": "^3.0.4",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/vercel": "6.0.2",
    "@googleapis/books": "^1.0.5",
    "@studio-freight/lenis": "^1.0.33",
    "astro": "^4.1.1",
    "fuse.js": "^7.0.0",
    "github-slugger": "^2.0.0",
    "jsdom": "^23.1.0",
    "mdast-util-toc": "^7.0.0",
    "photoswipe": "^5.4.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "remark-toc": "^9.0.0",
    "sanitize-html": "^2.11.0",
    "satori": "^0.10.11",
    "sharp": "^0.33.1",
    "tailwindcss": "^3.4.1",
    "taos": "^1.0.5",
    "theme-change": "^2.5.0",
    "typescript": "^5.3.3",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/github-slugger": "^1.3.0",
    "@types/jsdom": "^21.1.6",
    "@types/mdast": "^4.0.3",
    "@types/react": "^18.2.46",
    "@types/sanitize-html": "^2.9.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "astro-eslint-parser": "^0.16.0",
    "daisyui": "^4.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-tailwindcss": "^3.13.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markdownlint-cli2": "^0.11.0",
    "postcss-html": "^1.5.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^16.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "vnu-jar": "^23.4.11"
  }
}

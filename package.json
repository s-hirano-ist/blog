{
  "name": "blog",
  "version": "1.0.0",
  "type": "module",
  "description": "blog",
  "author": "s-hirano-ist",
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "dev": "astro check --watch & astro dev",
    "build": "astro check & astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "fmt": "prettier --check **/*.astro .",
    "fmt:fix": "prettier --write **/*.astro .",
    "prepare": "husky install",
    "lint": "astro check && tsc --noEmit && eslint .",
    "lint:fix": "astro check & tsc --noEmit & eslint . --fix",
    "lint:mark": "markdownlint-cli2 src/content/summary/*",
    "lint:mark:fix": "markdownlint-cli2-fix src/content/summary/*",
    "lint:css": "stylelint .",
    "lint:css:fix": "stylelint . --fix"
  },
  "lint-staged": {
    "*": "pnpm fmt",
    "src/**/*.{js, jsx, ts, tsx, astro}": "pnpm lint",
    "src/**/*.{css, astro}": "pnpm lint:css",
    "_markdown/**/*.md": "pnpm lint:mark",
    "src/**/*": "python3 script/generate_photo_path.py"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.1",
    "@astrojs/vercel": "^5.2.0",
    "@studio-freight/lenis": "^1.0.28",
    "astro": "^3.6.0",
    "fuse.js": "^7.0.0",
    "github-slugger": "^2.0.0",
    "jsdom": "^23.0.0",
    "mdast-util-toc": "^7.0.0",
    "photoswipe": "^5.4.2",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "remark-toc": "^9.0.0",
    "sanitize-html": "^2.11.0",
    "satori": "^0.10.11",
    "sharp": "^0.32.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@astrojs/react": "^3.0.6",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "^5.0.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/github-slugger": "^1.3.0",
    "@types/jsdom": "^21.1.6",
    "@types/mdast": "^4.0.3",
    "@types/react": "^18.2.38",
    "@types/sanitize-html": "^2.9.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "astro-eslint-parser": "^0.16.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "markdownlint-cli2": "^0.11.0",
    "postcss-html": "^1.5.0",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.2",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-order": "^6.0.3",
    "vnu-jar": "^23.4.11"
  }
}

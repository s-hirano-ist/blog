---
import SwiperContainer from "@components/SwiperContainer.astro";
import { CONTENTS } from "@content/_diy/data";
import PortfolioLayout from "@layouts/PortfolioLayout.astro";
---

<PortfolioLayout
  headerTitle="DIY"
  title="sola-tannnin-diy"
  subTitle="お金をだせば「いいもの」が手に入るのが当たり前の時代"
  subSubTitle="#DIY #レザークラフト #木工大工 #電子工作">
  <div class="grid w-full grid-cols-3 gap-4">
    {
      CONTENTS.map(content => {
        return (
          <div class="aspect-square">
            <p>{content.name}</p>
            <SwiperContainer content={content} />
          </div>
        );
      })
    }
  </div>
</PortfolioLayout>

<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
>
  var swiper = new Swiper(".swiper-container", {
    slidesPerView: 1,
    spaceBetween: 10,
    direction: "vertical",
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    loop: true,
  });
</script>

<script is:inline src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script is:inline></script>
<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";
  const lightbox = new PhotoSwipeLightbox({
    gallery: "#my-gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
    bgOpacity: 1.0,
  });
  lightbox.init();
</script>

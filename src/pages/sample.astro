---
import Layout from "@layouts/Layout.astro";
// import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Main from "@layouts/Main.astro";

export function dropdown() {
  document.querySelector("#submenu")?.classList.toggle("hidden");
  document.querySelector("#arrow")?.classList.toggle("rotate-0");
}

export function openSidebar() {
  document.querySelector(".sidebar")?.classList.toggle("hidden");
}
---

<Layout>
  <!-- <Header /> -->
  <Main>
    <span
      class="text-white absolute left-4 top-5 cursor-pointer text-4xl"
      onclick="openSidebar()"
    >
      <i class="bi bi-filter-left bg-gray-900 rounded-md px-2"></i>
    </span>
    <div
      class="sidebar lg:left-0 bg-gray-900 fixed bottom-0 top-0 w-[300px] overflow-y-auto p-2 text-center"
    >
      <div class="text-gray-100 text-xl">
        <div class="mt-1 flex items-center p-2.5">
          <i class="bi bi-app-indicator bg-blue-600 rounded-md px-2 py-1"></i>
          <h1 class="text-gray-200 ml-3 text-[15px] font-bold">TailwindCSS</h1>
          <i
            class="bi bi-x lg:hidden ml-28 cursor-pointer"
            onclick="openSidebar()"
          >
          </i>
        </div>
        <div class="bg-gray-600 my-2 h-[1px]"></div>
      </div>
      <div
        class="bg-gray-700 text-white flex cursor-pointer items-center rounded-md p-2.5 px-4 duration-300"
      >
        <i class="bi bi-search text-sm"></i>
        <input
          type="text"
          placeholder="Search"
          class="bg-transparent ml-4 w-full text-[15px] focus:outline-none"
        />
      </div>
      <div
        class="hover:bg-blue-600 text-white mt-3 flex cursor-pointer items-center rounded-md p-2.5 px-4 duration-300"
      >
        <i class="bi bi-house-door-fill"></i>
        <span class="text-gray-200 ml-4 text-[15px] font-bold">Home</span>
      </div>
      <div
        class="hover:bg-blue-600 text-white mt-3 flex cursor-pointer items-center rounded-md p-2.5 px-4 duration-300"
      >
        <i class="bi bi-bookmark-fill"></i>
        <span class="text-gray-200 ml-4 text-[15px] font-bold">Bookmark</span>
      </div>
      <div class="bg-gray-600 my-4 h-[1px]"></div>
      <div
        class="hover:bg-blue-600 text-white mt-3 flex cursor-pointer items-center rounded-md p-2.5 px-4 duration-300"
        onclick="dropdown()"
      >
        <i class="bi bi-chat-left-text-fill"></i>
        <div class="flex w-full items-center justify-between">
          <span class="text-gray-200 ml-4 text-[15px] font-bold">Chatbox</span>
          <span class="rotate-180 text-sm" id="arrow">
            <i class="bi bi-chevron-down"></i>
          </span>
        </div>
      </div>
      <div
        class="text-gray-200 mx-auto mt-2 w-4/5 text-left text-sm font-bold"
        id="submenu"
      >
        <h1 class="hover:bg-blue-600 mt-1 cursor-pointer rounded-md p-2">
          Social
        </h1>
        <h1 class="hover:bg-blue-600 mt-1 cursor-pointer rounded-md p-2">
          Personal
        </h1>
        <h1 class="hover:bg-blue-600 mt-1 cursor-pointer rounded-md p-2">
          Friends
        </h1>
      </div>
      <div
        class="hover:bg-blue-600 text-white mt-3 flex cursor-pointer items-center rounded-md p-2.5 px-4 duration-300"
      >
        <i class="bi bi-box-arrow-in-right"></i>
        <span class="text-gray-200 ml-4 text-[15px] font-bold">Logout</span>
      </div>
    </div>
  </Main>
  <Footer />
</Layout>

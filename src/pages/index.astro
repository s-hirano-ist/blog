---
import portfolioImage from "@assets/portfolio.webp";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import PageLinkCard from "@components/PageLinkCard.astro";
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout>
  <main class="background">
    <Header title="Portfolio" darkModeDisabled />
    <section id="hero">
      <Image src={portfolioImage} alt="" class="w-full" />
      <h1>s-hirano-ist</h1>
      <p>Hello. This is a portfolio of s-hirano-ist.</p>
      <p>
        He received my B.S. degree from Osaka University, Osaka, Japan, in 2022.
      </p>
      <p>
        He is currently working toward an M.E. degree at the Graduate School of
        Information Science and Technology at Osaka University.
      </p>
    </section>
    <section class="mx-auto px-4 py-8">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
        <PageLinkCard
          href="/tech-stack"
          title="tech-stack"
          description={`${new Date().getFullYear()}年現在の技術スタック`}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-device-desktop"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M3 5a1 1 0 0 1 1 -1h16a1 1 0 0 1 1 1v10a1 1 0 0 1 -1 1h-16a1 1 0 0 1 -1 -1v-10z"
            ></path>
            <path d="M7 20h10"></path>
            <path d="M9 16v4"></path>
            <path d="M15 16v4"></path>
          </svg>
        </PageLinkCard>
        <PageLinkCard
          href="/photo"
          title="sola-apochromat-lens"
          description="撮影の議事録 from 2020年">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-camera"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M5 7h1a2 2 0 0 0 2 -2a1 1 0 0 1 1 -1h6a1 1 0 0 1 1 1a2 2 0 0 0 2 2h1a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-9a2 2 0 0 1 2 -2"
            ></path>
            <path d="M9 13a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
          </svg>
        </PageLinkCard>
        <PageLinkCard
          href="/d-plan"
          title="d-plan"
          description="2018年にリリースしたiOSアプリの記録">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-map-route"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M3 7l6 -3l6 3l6 -3v13l-6 3l-6 -3l-6 3v-13"></path>
            <path d="M9 12v.01"></path>
            <path d="M6 13v.01"></path>
            <path d="M17 15l-4 -4"></path>
            <path d="M13 15l4 -4"></path>
          </svg>
        </PageLinkCard>
        <PageLinkCard
          href="/diy"
          title="sola-tannnin-diy"
          description="DIYの議事録 from 2020年">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon icon-tabler icon-tabler-axe"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M13 9l7.383 7.418c.823 .82 .823 2.148 0 2.967a2.11 2.11 0 0 1 -2.976 0l-7.407 -7.385"
            ></path>
            <path
              d="M6.66 15.66l-3.32 -3.32a1.25 1.25 0 0 1 .42 -2.044l3.24 -1.296l6 -6l3 3l-6 6l-1.296 3.24a1.25 1.25 0 0 1 -2.044 .42z"
            ></path>
          </svg>
        </PageLinkCard>
      </div>
    </section>
    <Footer darkModeDisabled />
  </main>
</Layout>

<style>
  .background {
    @apply px-4;
    background: url(/portfolioBgImage.webp);
  }
  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block text-xl font-bold text-skin-lightBlue sm:my-8 sm:text-2xl;
  }
  #hero p {
    @apply mb-2 text-skin-white;
  }
</style>

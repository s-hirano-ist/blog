---
export interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<main id="main-content">
  <h1>{pageTitle}</h1>
  <slot />
</main>

<style>
  #main-content {
    @apply mx-auto mt-4 w-full max-w-5xl px-4 pb-12;
  }
  #main-content h1 {
    @apply text-2xl font-semibold sm:text-3xl;
  }
</style>

---
export type Props = {
  href: string;
  title: string;
  description: string;
};
const { href, title, description } = Astro.props;
---

<a href={href} class="hover:text-primary">
  <div class="flex flex-col justify-between rounded border p-4 shadow-sm">
    <div class="flex size-16 items-center justify-center rounded-full">
      <slot />
    </div>
    <h2 class="mb-2 font-bold">{title}</h2>
    <p>{description}</p>
  </div>
</a>

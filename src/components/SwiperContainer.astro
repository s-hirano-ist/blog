---
import type { Content } from "@content/_diy/data";
import { Image } from "astro:assets";

export type Props = {
  content: Content;
};
const { content } = Astro.props;
---

<swiper-container space-between="0" pagination={true}>
  {
    content.src.map(src => (
      <swiper-slide>
        <Image
          class="aspect-square object-contain"
          src={src}
          alt={content.name}
        />
      </swiper-slide>
    ))
  }
</swiper-container>

---
export type Props = {
  data: { date: string; title: string; description: string }[];
};
const { data } = Astro.props;
---

<div class="timeline">
  <ol class="relative border-s">
    {
      data.map(d => (
        <li class="mb-8 ms-4">
          <div class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border" />
          <span class="mb-1 text-sm font-normal leading-none">{d.date}</span>
          <h3 class=" text-lg font-semibold">{d.title}</h3>
          <p class="mb-4 text-base font-normal">{d.description}</p>
        </li>
      ))
    }
  </ol>
</div>
<style>
  .timeline li {
    @apply text-skin-lightBlue;
  }

  .timeline p {
    @apply mb-2 text-skin-white;
  }

  .timeline span {
    @apply text-skin-white;
  }
</style>
